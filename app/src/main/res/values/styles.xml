<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <!-- App bar theme -->
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <!-- Theme for button with app primary colour as background colour -->
    <style name="PrimaryColourButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Homepage activity summary button theme -->
    <style name="HomepageActivityButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/btn_bg_grey</item>
    </style>

    <!-- Previous and next button theme -->
    <style name="PrevNextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Theme for goal name text on the update goals screen -->
    <style name="GoalNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Theme for goal value on the update goals screen -->
    <style name="GoalEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">20dp</item>
        <item name="android:inputType">number</item>
    </style>

    <!-- Theme for recommended goal text on the update goals screen -->
    <style name="RecommendedGoalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorMediumGrey</item>
        <item name="android:text">@string/app_recommends</item>
    </style>

    <!-- Theme for recommended goal value on the update goals screen -->
    <style name="RecommendedValueTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorMediumGrey</item>
    </style>

    <!-- Theme for text on track weight screen -->
    <style name="TrackWeightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">22dp</item>
    </style>

    <!-- Exercises summary text for day of the week -->
    <style name="DayOfWeekText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Exercises summary checkbox for day of the week -->
    <style name="DayCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onCheckBoxClick</item>
        <item name="android:layout_toRightOf">@id/tv_day_3</item>
    </style>

</resources>
