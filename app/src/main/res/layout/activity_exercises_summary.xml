<?xml version="1.0" encoding="utf-8"?>
<!-- Adapted from https://developer.android.com/training/implementing-navigation/nav-drawer by Google -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <TextView
            android:id="@+id/tv_current_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/toolbar"
            android:textSize="28dp"
            android:text="@string/week_heading_this_week"/>

        <!-- days of the week with a checkbox for each to mark the exercises as complete -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_current_heading"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_1"
                android:text="Monday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_1"
                android:layout_alignBaseline="@id/tv_day_1"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_2"
                android:layout_below="@id/tv_day_1"
                android:text="Tuesday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_2"
                android:layout_alignBaseline="@id/tv_day_2"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_3"
                android:layout_below="@id/tv_day_2"
                android:text="Wednesday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_3"
                android:layout_alignBaseline="@id/tv_day_3"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_4"
                android:layout_below="@id/tv_day_3"
                android:text="Thursday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_4"
                android:layout_alignBaseline="@id/tv_day_4"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_5"
                android:layout_below="@id/tv_day_4"
                android:text="Friday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_5"
                android:layout_alignBaseline="@id/tv_day_5"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_6"
                android:layout_below="@id/tv_day_5"
                android:text="Saturday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_6"
                android:layout_alignBaseline="@id/tv_day_6"
                style="@style/DayCheckBox"/>

            <TextView
                android:id="@+id/tv_day_7"
                android:layout_below="@id/tv_day_6"
                android:text="Sunday"
                style="@style/DayOfWeekText"/>

            <CheckBox
                android:id="@+id/cb_day_7"
                android:layout_alignBaseline="@id/tv_day_7"
                style="@style/DayCheckBox"/>

        </RelativeLayout>

        <!-- advice text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_start"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:textSize="18dp"
            android:text="@string/ex_sessions_goal"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:text="@string/start_session"
            style="@style/PrimaryColourButton"/>

    </RelativeLayout>

    <include layout="@layout/nav_view"/>

</android.support.v4.widget.DrawerLayout>